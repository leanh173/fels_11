<% provide(:title, @user.name) %>
<div class = "row">
  <aside class = "span4">
	<section>
      <h1> 
        <%= gravatar_for @user%>
        <%= @user.name %> , <%= @user.email%> 
        learned <%= pluralize(current_user.questions.distinct.count, "word") %>
      </h1>
	</section>
  </aside>
  <div class="span8">
    <%= render "follow_form" if signed_in? %>
    <% @feed_items = @lessons.order('lessons.created_at DESC') %>
    <h3>
      Activities (<%= @user.lessons.count %>)
    </h3>
    <%= render "shared/feed" %>
  </div>
</div>
