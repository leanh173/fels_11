<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render "shared/user_info" %>
      </section>
    </aside>
    <div class="span8">
      <h3>Activities</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to E-learning</h1>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
  <h1>E-Learning</h1>
<% end %>
