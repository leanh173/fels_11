<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render "shared/user_info" %>
      </section>
    </aside>
    <% if current_user.admin %> 
      <%= link_to "Add new question", new_admin_question_path, class: "btn btn-large btn-primary" %>
      <%= link_to "Word", admin_questions_path, class: "btn btn-large btn-primary" %>
    <% else %>
      <%= link_to "Word", questions_path, class: "btn btn-large btn-primary" %>
      <%= link_to "Lesson", categories_path, class: "btn btn-large btn-primary" %>
    <% end %>
    <div class="span8">
      <h3>Activities</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to E-learning</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
  <h1>E-Learning</h1>
<% end %>
